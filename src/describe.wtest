import hospital.*
import persona.*
import doctor.*

describe "tests sobre el hospital y su fama" {

	test "si no tiene doctores, su calidad es 0" {
		assert.equals(hospital.calidadTotal(), 0)
	}
	
	test "si tiene 3 doctores de 10 puntos c/u, su calidad es 30" {
		
		hospital.doctores([
			new Doctor(calidadDeAtencion = 10), 
			new Doctor(calidadDeAtencion = 10), 
			new Doctor(calidadDeAtencion = 10)
		])
		
		assert.equals(hospital.calidadTotal(), 30)
	}
	
	test "si tiene 0 puntos de fama, NO es famoso" {
		assert.notThat( hospital.sosFamoso() )
	}
	
	test "si tiene m√°s de 1000 puntos de fama, es famoso" {
		const unDoctorCapo = new Doctor()
		unDoctorCapo.calidadDeAtencion(1000000)
		hospital.agregaDoctor(unDoctorCapo)
		
		const sandra = new Persona(chisme = 800, salud = 10)
		
		hospital.agregaPaciente(sandra)
		
		assert.that( hospital.sosFamoso() )
	}
}